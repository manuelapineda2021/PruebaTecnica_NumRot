<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Prueba Técnica - NumRot</title>
    <script src="/js/equation.js"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link select" href="#formRegister">Registro</a>
                <a class="nav-item nav-link select" href="#queries">Consultas</a>
                <a class="nav-item nav-link" href="#equations">Ecuación</a>
            </div>
        </div>
    </nav>
    <div class="container mt-5">
        <section class="formRegister" id="formRegister">
            <div class="row">
                <div class="col-8 offset-2">
                    <form action="/register" method="post" id="form" class="p-3 mt-5 shadow border">
                        <h2 class="text-center text-primary">Registro de Nuevo Usuario</h2>
                        <div style="font-weight: bold;">
                            <label for="document">Número Documento:</label>
                            <input id="document" name="document" class="form-control my-2" type="number"
                                placeholder="Ej: 100188365" required>

                            <label for="firstName">Primer Nombre:</label>
                            <input id="firstName" name="firstName" class="form-control my-2" type="text"
                                placeholder="Ej: Maria" pattern="[A-Za-záéíóúÁÉÍÓÚñÑ\s]+" required>

                            <label for="middleName">Segundo Nombre:</label>
                            <input id="middleName" name="middleName" class="form-control my-2" type="text"
                                placeholder="Ej: Camila" pattern="[A-Za-záéíóúÁÉÍÓÚñÑ\s]+">

                            <label for="firstSurName">Primer Apellido:</label>
                            <input id="firstSurName" name="firstSurName" class="form-control my-2" type="text"
                                placeholder="Ej: Hurtado" pattern="[A-Za-záéíóúÁÉÍÓÚñÑ\s]+" required>

                            <label for="secondLastName">Segundo Apellido:</label>
                            <input id="secondLastName" name="secondLastName" class="form-control my-2" type="text"
                                placeholder="Ej: Gonsalez" pattern="[A-Za-záéíóúÁÉÍÓÚñÑ\s]+">

                            <label for="phone">Teléfono:</label>
                            <input id="phone" name="phone" class="form-control my-2" type="tel"
                                placeholder="Ej: 302 286 7088">

                            <label for="email">Correo Electrónico:</label>
                            <input id="email" name="email" class="form-control my-2" type="email"
                                placeholder="Ej: camila@hotmail.com">

                            <label for="address">Dirección:</label>
                            <input id="address" name="address" class="form-control my-2" type="text"
                                placeholder="Ej: Carrera 41#78-90" required>

                            <label for="age">Edad:</label>
                            <input id="age" name="age" class="form-control my-2" type="number" placeholder="36"
                                required>

                            <label for="generated">Generó:</label>
                            <input id="generated" name="generated" class="form-control my-2" type="text"
                                placeholder="Femenimo" pattern="[A-Za-záéíóúÁÉÍÓÚñÑ\s]+" required>

                            <!--<input class="btn btn-primary mt-2" type="submit" value="Registrar">-->
                            <button class="btn btn-primary mt-2">Registrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
        <hr>
        <section class="queries" id="queries">
            <div class="col-8 offset-2">
                <form id="formQueries" class="p-3 mt-5 shadow border">
                    <h2 class="text-center text-primary">Consultas - Registro de Usuarios</h2>
                    <div style="font-weight: bold;">

                        <label for="fullNames">Consultar nombres completos:</label>
                        <input id="fullNames" class="form-control my-2" type="text" placeholder="Respuesta" readonly>
                        <button type="button" class="btn btn-primary"
                            onclick="consultFullNames()">Consultar</button><br>

                        <label for="numberWomen" class="mt-3">Consultar cantidad de mujeres:</label>
                        <input id="numberWomen" class="form-control my-2" type="text" placeholder="Respuesta" readonly>
                        <button type="button" class="btn btn-primary"
                            onclick="consultNumberWomen()">Consultar</button><br>

                        <label for="numberMan" class="mt-3">Consultar cantidad de hombres:</label>
                        <input id="numberMan" class="form-control my-2" type="text" placeholder="Respuesta"readonly>
                        <button type="button" class="btn btn-primary"
                            onclick="consultNumberMan()">Consultar</button><br>

                        <label for="olderAge" class="mt-3">Consultar nombre completo de la persona con mayor edad:</label>
                        <input id="olderAge" class="form-control my-2" type="text" placeholder="Respuesta"readonly>
                        <button type="button" class="btn btn-primary"
                            onclick="consultOlderAge()">Consultar</button><br>

                        <label for="averageAge" class="mt-3">Consultar el promedio de la edad:</label>
                        <input id="averageAge" class="form-control my-2" type="text" placeholder="Respuesta"readonly>
                        <button type="button" class="btn btn-primary"
                            onclick="consultAverageAge()">Consultar</button><br>

                    </div>
                </form>
            </div>
        </section>
        <hr>
        <section class="equations" id="equations">
            <div class="col-8 offset-2">
                <form id="formCalculate" class="p-3 mt-5 shadow border">
                    <h2 class="text-center text-primary">Ecuación Cuadrática</h2>
                    <div style="font-weight: bold;">
                        <label for="a">Valor de A:</label>
                        <input id="a" class="form-control my-2" type="number" placeholder="Ingresa el valor de A">
                        <label for="b">Valor de B:</label>
                        <input id="b" class="form-control my-2" type="number" placeholder="Ingresa el valor de B">
                        <label for="c">Valor de C:</label>
                        <input id="c" class="form-control my-2" type="number" placeholder="Ingresa el valor de C">
                        <label>Resultado:</label>
                        <div id="result" class="form-control my-2"></div>
                        <button type="button" class="btn btn-primary" onclick="calculateEquation()">Calcular</button>

                    </div>
                </form>
            </div>
        </section>
    </div>
</body>

</html>